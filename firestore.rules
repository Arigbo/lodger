/**
 * @fileOverview Firestore Security Rules for the Urban Nest application.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model for user profiles and a landlord-ownership model for properties and rental applications. Lease agreements and property reviews are accessible based on roles (tenant, landlord).  Authorization decisions are made independently by denormalizing key IDs onto documents.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Only the user can read/write their own profile.
 * - /properties/{propertyId}: Stores property listings. Only the landlord who owns the property can create/update/delete it. Anyone can read property listings.
 * - /properties/{propertyId}/rentalApplications/{rentalApplicationId}: Stores rental applications. Only the landlord who owns the property can manage rental applications.
 * - /leaseAgreements/{leaseAgreementId}: Stores lease agreements.  Accessible to the landlord and tenant involved in the lease.
 * - /propertyReviews/{propertyReviewId}: Stores property reviews.  Anyone can read the reviews. Only the author can create/update/delete their review.
 *
 * Key Security Decisions:
 * - Users can only access their own data under /users/{userId}.
 * - Landlords control their properties and associated rental applications.
 * - Listing of users is disallowed.
 * - Public read access is granted to properties and property reviews.
 *
 * Denormalization for Authorization:
 * - Properties: `landlordId` is stored directly on the property document to avoid needing to query for the landlord's user document.
 * - LeaseAgreements: `tenantId` and `landlordId` are stored directly on the lease agreement to avoid needing to query for the user documents.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profiles. Only the user can read or write their own profile.
     * @path /users/{userId}
     * @allow (create, update, delete): User with ID 'user123' can create/update/delete their own profile.
     *   Request: { auth: { uid: 'user123' }, resource.data.id: 'user123' }
     * @allow (get, list): User with ID 'user123' can read their own profile.
     *   Request: { auth: { uid: 'user123' } }
     * @deny (create, update, delete): User with ID 'user456' attempts to modify profile for 'user123'.
     *   Request: { auth: { uid: 'user456' }, resource.data.id: 'user123' }
     * @principle Enforces document ownership for all operations on user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Disable listing of all users

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource.data.id == request.resource.data.id;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Manages property listings. Landlords can create, update, and delete their own properties.  Anyone can read.
     * @path /properties/{propertyId}
     * @allow (get, list): Any user can read (get) or list properties.
     *   Request: { auth: { uid: 'anyUser' } }
     * @allow (create, update, delete): Landlord 'landlord456' creates/updates/deletes their own property.
     *   Request: { auth: { uid: 'landlord456' }, resource.data.landlordId: 'landlord456' }
     * @deny (create, update, delete): Tenant 'tenant789' attempts to create/update/delete property owned by 'landlord456'.
     *   Request: { auth: { uid: 'tenant789' }, resource.data.landlordId: 'landlord456' }
     * @principle Enforces landlord ownership for writes, allows public reads.
     */
    match /properties/{propertyId} {
      function isOwner(landlordId) {
        return request.auth.uid == landlordId;
      }

      function isExistingOwner(landlordId) {
          return isOwner(landlordId) && resource != null;
      }

      allow get, list: if true;

      allow create: if isOwner(request.resource.data.landlordId) && request.resource.data.id == propertyId;
      allow update: if isExistingOwner(resource.data.landlordId);
      allow delete: if isExistingOwner(resource.data.landlordId);
    }

    /**
     * @description Manages rental applications for properties. Only the landlord of the property can manage applications.
     * @path /properties/{propertyId}/rentalApplications/{rentalApplicationId}
     * @allow (get, list): Landlord 'landlord456' reads/lists applications for their property.
     *   Request: { auth: { uid: 'landlord456' }, resource.data.propertyId: 'property123' }
     * @allow (create, update, delete): Landlord 'landlord456' creates/updates/deletes applications for their property.
     *   Request: { auth: { uid: 'landlord456' }, resource.data.propertyId: 'property123' }
     * @deny (get, list, create, update, delete): Tenant attempts to access rental applications for a property.
     *   Request: { auth: { uid: 'tenant789' }, resource.data.propertyId: 'property123' }
     * @principle Restricts access to rental applications to the property's landlord.
     */
    match /properties/{propertyId}/rentalApplications/{rentalApplicationId} {
      function isPropertyOwner(propertyId) {
        return get(/databases/$(database)/documents/properties/$(propertyId)).data.landlordId == request.auth.uid;
      }

      function isExistingPropertyOwner(propertyId) {
          return isPropertyOwner(propertyId) && resource != null;
      }

      allow get, list: if isPropertyOwner(propertyId);

      allow create: if isPropertyOwner(propertyId);
      allow update: if isExistingPropertyOwner(propertyId);
      allow delete: if isExistingPropertyOwner(propertyId);
    }

    /**
     * @description Manages lease agreements. Accessible to the landlord and tenant involved in the lease.
     * @path /leaseAgreements/{leaseAgreementId}
     * @allow (get, list): Landlord or tenant can read a specific lease agreement if landlordId or tenantId matches their UID
     *   Request: { auth: { uid: 'landlord123' } } OR { auth: { uid: 'tenant456' } }
     * @allow (create): Landlord or tenant can create a lease agreement if landlordId or tenantId matches their UID
     *   Request: { auth: { uid: 'landlord123' }, resource.data.landlordId: 'landlord123' } OR { auth: { uid: 'tenant456' }, resource.data.tenantId: 'tenant456' }
     * @allow (update, delete): Landlord or tenant can update or delete a lease agreement if landlordId or tenantId matches their UID and document exists
     *   Request: { auth: { uid: 'landlord123' } } OR { auth: { uid: 'tenant456' } }
     * @deny (create, update, delete): User attempts to modify a lease agreement they are not a party to.
     *   Request: { auth: { uid: 'attacker789' }, resource.data.landlordId: 'landlord123', resource.data.tenantId: 'tenant456' }
     * @principle Restricts access to lease agreements to participating parties.
     */
    match /leaseAgreements/{leaseAgreementId} {
      function isParticipant(landlordId, tenantId) {
        return request.auth.uid == landlordId || request.auth.uid == tenantId;
      }

      function isExistingParticipant(landlordId, tenantId) {
          return isParticipant(landlordId, tenantId) && resource != null;
      }

      allow get, list: if resource.data.landlordId == request.auth.uid || resource.data.tenantId == request.auth.uid;

      allow create: if request.resource.data.landlordId == request.auth.uid || request.resource.data.tenantId == request.auth.uid;
      allow update: if isExistingParticipant(resource.data.landlordId, resource.data.tenantId);
      allow delete: if isExistingParticipant(resource.data.landlordId, resource.data.tenantId);
    }

    /**
     * @description Manages property reviews.  Anyone can read the reviews. Only the author can create, update, or delete their own reviews.
     * @path /propertyReviews/{propertyReviewId}
     * @allow (get, list): Any user can read/list property reviews.
     *   Request: { auth: { uid: 'anyUser' } }
     * @allow (create, update, delete): Tenant 'tenant456' creates/updates/deletes their own review.
     *   Request: { auth: { uid: 'tenant456' }, resource.data.tenantId: 'tenant456' }
     * @deny (create, update, delete): Tenant 'tenant789' attempts to create/update/delete review written by 'tenant456'.
     *   Request: { auth: { uid: 'tenant789' }, resource.data.tenantId: 'tenant456' }
     * @principle Enforces author ownership for review creation, updates, and deletes; allows public reads.
     */
    match /propertyReviews/{propertyReviewId} {
      function isOwner(tenantId) {
        return request.auth.uid == tenantId;
      }

      function isExistingOwner(tenantId) {
        return isOwner(tenantId) && resource != null;
      }

      allow get, list: if true;

      allow create: if isOwner(request.resource.data.tenantId);
      allow update: if isExistingOwner(resource.data.tenantId);
      allow delete: if isExistingOwner(resource.data.tenantId);
    }
  }
}