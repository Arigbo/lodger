
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /properties/{propertyId} {
      allow read;
      allow write: if request.auth.uid == resource.data.landlordId;
    }

    match /properties/{propertyId}/rentalApplications/{applicationId} {
      allow read, write: if get(/databases/$(database)/documents/properties/$(propertyId)).data.landlordId == request.auth.uid || request.auth.uid == resource.data.tenantId;
    }

    match /leaseAgreements/{leaseId} {
      allow read, write: if request.auth.uid == resource.data.landlordId || request.auth.uid == resource.data.tenantId;
    }

    match /propertyReviews/{reviewId} {
      allow read;
      allow create: if request.auth.uid == request.resource.data.tenantId;
    }

    match /messages/{messageId} {
      allow read, write: if request.auth.uid in resource.data.participantIds;
    }

    match /transactions/{transactionId} {
      allow read, write: if request.auth.uid == resource.data.landlordId || request.auth.uid == resource.data.tenantId;
    }
  }
}
