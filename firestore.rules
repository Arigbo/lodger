
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /properties/{propertyId} {
      // Allow public read access for listings
      allow get, list: if true;
      
      // Secure write operations to the owner
      allow create: if request.auth.uid == request.resource.data.landlordId;
      allow update, delete: if request.auth.uid == resource.data.landlordId;
    }

    match /rentalApplications/{rentalApplicationId} {
        allow read, write: if get(/databases/$(database)/documents/properties/$(request.resource.data.propertyId)).data.landlordId == request.auth.uid || request.auth.uid == request.resource.data.tenantId;
        allow list: if request.auth.uid == request.query.landlordId || request.auth.uid == request.query.tenantId;
    }

    match /leaseAgreements/{leaseId} {
      allow read, write: if request.auth.uid == resource.data.landlordId || request.auth.uid == resource.data.tenantId;
    }

    match /propertyReviews/{reviewId} {
      allow read;
      allow create: if request.auth.uid == request.resource.data.tenantId;
    }

    match /messages/{messageId} {
      allow read: if request.auth.uid in resource.data.participantIds;
      allow create: if request.auth.uid == request.resource.data.senderId && request.auth.uid in request.resource.data.participantIds;
    }

    match /transactions/{transactionId} {
      // Allow landlords and tenants to read/write their own transactions
      allow get, update, delete, create: if request.auth.uid == resource.data.landlordId || request.auth.uid == resource.data.tenantId;
      // Allow landlords and tenants to list transactions they are a part of
      allow list: if request.query.where[0][2] == request.auth.uid;
    }
  }
}
