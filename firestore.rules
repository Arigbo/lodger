rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      // Check for hardcoded email OR existence in admin_users collection
      return request.auth != null && (
          request.auth.token.email == 'admin@lodger.com' || 
          exists(/databases/$(database)/documents/admin_users/$(request.auth.uid))
      );
    }

    match /admin_users/{userId} {
        allow read, write: if request.auth != null; // Allow authenticated users to check/create admin records (limit enforced by client, monitored by owner)
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    match /properties/{propertyId} {
      // Admins have full access
      allow read, write: if isAdmin();
      
      // Allow public read access for listings
      allow get, list: if true;
      
      // Allow creation if the authenticated user is setting themselves as the landlord
      allow create: if request.auth != null && request.resource.data.landlordId == request.auth.uid;
      
      // Allow update if: user is landlord, OR user is current tenant updating specific termination fields
      allow update: if request.auth != null && (
          resource.data.landlordId == request.auth.uid || 
          (resource.data.currentTenantId == request.auth.uid && 
           request.resource.data.status == 'available' && 
           request.resource.data.currentTenantId == null &&
           request.resource.data.leaseStartDate == null)
      );
      
      allow delete: if request.auth != null && resource.data.landlordId == request.auth.uid;
    }

    match /rentalApplications/{rentalApplicationId} {
        allow read: if request.auth != null && (
            resource.data.tenantId == request.auth.uid || 
            get(/databases/$(database)/documents/properties/$(resource.data.propertyId)).data.landlordId == request.auth.uid
        );
        
        allow create: if request.auth != null && request.resource.data.tenantId == request.auth.uid;
        
        // Allow update/delete for both tenant and landlord
        allow update, delete: if request.auth != null && (
            resource.data.tenantId == request.auth.uid ||
            get(/databases/$(database)/documents/properties/$(resource.data.propertyId)).data.landlordId == request.auth.uid
        );

        allow list: if request.auth != null; 
    }

    match /notifications/{notificationId} {
        allow read, update, delete: if request.auth != null && (
            resource == null || resource.data.userId == request.auth.uid
        );
        allow create: if request.auth != null;
        allow list: if request.auth != null && (
            request.query.limit <= 100 // Common safety
        );
    }

    match /leaseAgreements/{leaseId} {
      // Admins have full access
      allow read, write: if isAdmin();
      
      function isParticipant() {
        return request.auth.uid == resource.data.landlordId || 
               request.auth.uid == resource.data.tenantId;
      }
      
      allow read: if request.auth != null && (isParticipant() || resource == null); // resource == null covers create check phase sometimes
      
      allow create: if request.auth != null && (
          request.resource.data.landlordId == request.auth.uid || 
          request.resource.data.tenantId == request.auth.uid
      );
                       
      allow update: if request.auth != null && isParticipant();
      allow delete: if request.auth != null && isParticipant() && 
                    resource.data.status != 'active' && 
                    resource.data.landlordSigned == false && 
                    resource.data.tenantSigned == false;
    }

    match /userReports/{reportId} {
      allow read, write: if request.auth != null; // Relaxed for now to ensure admin can read/write, refined by isAdmin global rule if needed but keeping explicit for clarity
    }

    match /propertyReviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.tenantId == request.auth.uid;
      allow list: if true; // Public reviews
      allow update, delete: if request.auth != null && resource.data.tenantId == request.auth.uid;
    }

    match /maintenanceRequests/{requestId} {
      allow read: if request.auth != null && (
        resource.data.landlordId == request.auth.uid || 
        resource.data.tenantId == request.auth.uid
      );
      
      allow create: if request.auth != null && request.resource.data.tenantId == request.auth.uid;
      
      allow update: if request.auth != null && (
        resource.data.landlordId == request.auth.uid || 
        resource.data.tenantId == request.auth.uid
      );

      allow list: if request.auth != null;
    }

    match /messages/{messageId} {
      // Allow admins full access to messages
      allow read, write: if isAdmin();
      
      // Regular users can only access messages they're part of
      allow read, update, delete: if request.auth != null && request.auth.uid in resource.data.participantIds;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
      allow list: if request.auth != null;
    }

    match /transactions/{transactionId} {
      allow read: if request.auth != null && (
         resource.data.landlordId == request.auth.uid || 
         resource.data.tenantId == request.auth.uid
      );
      allow create: if request.auth != null && (
         request.resource.data.landlordId == request.auth.uid || 
         request.resource.data.tenantId == request.auth.uid
      );
      allow update, delete: if request.auth != null && (
         resource.data.landlordId == request.auth.uid || 
         resource.data.tenantId == request.auth.uid
      );
      allow list: if request.auth != null;
    }

    match /schools/{schoolId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    match /comments/{commentId} {
      allow read: if true;
      allow create: if true; // Allow public comments
    }
  }
}
