rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User profile images: users/{userId}/...
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024;
    }
    
    // Property images: properties/{landlordId}/...
    match /properties/{landlordId}/{allPaths=**} {
      allow read: if true; // Publically visible properties
      allow write: if request.auth != null && request.auth.uid == landlordId;
    }
    
    // Default rule: reject everything else
    match /blog-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
